<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.kaleido.cesmarttracker.showComment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/rate_head"
        android:layout_height="255dp"
        android:background="@color/comment_head_yellow">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/total_rate"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textSize="50dp"
                android:id="@+id/textView9"
                android:layout_gravity="center" />
        </FrameLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rate_head2"
        android:background="@color/comment_head_yellow_dark"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:text="Course : "
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Review : "
            android:layout_centerVertical="true"
            android:id="@+id/textView5"
            android:layout_toStartOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/textView6"
            android:layout_toStartOf="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:paddingRight="10dp"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
        </ListView>
    </ScrollView>

</LinearLayout>
