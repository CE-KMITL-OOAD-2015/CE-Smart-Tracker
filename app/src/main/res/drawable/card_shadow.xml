<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:start="3dp"
          android:gravity="bottom"
          android:top="3dp">
        <shape  android:shape="rectangle">
            <solid android:color="#41000000" />
        </shape>
    </item>


    <item android:bottom="3dp"
          android:right="3dp">

        <shape  android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <size android:height="100dp"
                  android:width="100dp"/>
        </shape>

    </item>

    <item android:bottom="3dp"
          android:right="3dp"
        android:id="@+id/tri">
        <bitmap android:gravity="bottom|right" android:src="@drawable/triangle">
        </bitmap>
    </item>

</layer-list>